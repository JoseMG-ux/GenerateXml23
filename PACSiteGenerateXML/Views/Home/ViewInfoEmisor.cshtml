@{
    ViewData["Title"] = "Información del Emisor";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Document</title>
    <!-- CSS only -->
    <!-- CSS only -->
    @*
    *@
</head>
<body>
    <div class="card shadow p-3 mb-5 bg-white rounded" style="width:auto; height: auto">
        <div class="card-body">
            <h5 class="card-title"><strong>Información del Emisor</strong></h5>
            <hr />

            <form>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputState">Tipo de Contribuyente:</label>
                        <select id="selectCls" class="form-control">
                            <option selected>Escoga una opción:</option>
                            <option value="1">Natural</option>
                            <option value="2">Jurídico</option>
                        </select>
                    </div>
                    <div class="form-group col-md-7">
                        <label for="inputPassword4">RUC:</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="">
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputAddress">Dígito Verificador <strong>(DV)</strong>:</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="">
                    </div>
                    <div class="form-group col-md-7">
                        <label for="inputAddress">Nombre o Razón Social:</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="">
                    </div>
        
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="exampleFormControlTextarea1">Código de la Sucursal de emisión:</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="exampleFormControlTextarea1">Dirección de la Sucursal emisora:</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="exampleFormControlTextarea1">Coordenadas Geográficas de la Sucursal:</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="">
                    </div>
                </div>
                <div class="form-row">
                    
                    <div class="form-group col-md-4">
                        <label for="exampleFormControlTextarea1">Codigo de la Prov., Distrito y Corregimiento:</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputState">Provincia de la Sucursal:</label>
                        <select id="selectCls" class="form-control">
                            <option selected>Escoga una opción:</option>
                            <option value="">Bocas del Toro</option>
                            <option value="">Coclé</option>
                            <option value="">Panamá</option>
                            <option value="">Colón</option>
                            <option value="">Chiriqui</option>
                            <option value="">Darién</option>
                            <option value="">Herrera</option>
                            <option value="">Los Santos</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Distrito de la Sucursal:</label>
                        <select id="selectCls" class="form-control">
                            <option selected>Escoga una opción:</option>
                            <option value="">Panamá</option>
                            <option value="">Balboa</option>
                            <option value="">Cheoo</option>
                            <option value="">Chiman</option>
                            <option value="">San Miguelito</option>
                            <option value="">Taboga</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Corregimiento de la Sucursal:</label>
                        <select id="selectCls" class="form-control">
                            <option selected>Escoga una opción:</option>
                            <option value="">San Francisco</option>
                            <option value="">Pueblo Nuevo</option>
                            <option value="">Parque lefevre</option>
                            <option value="">Rio Abajo</option>
                        </select>
                    </div>
                </div>
                 <div class="form-row">    
                    <div class="form-group col-md-4">
                        <label for="exampleFormControlTextarea1">Telefono de Contacto:</label>
                        <input type="number" class="form-control" id="inputPassword4" placeholder="">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="exampleFormControlTextarea1">Correo electrónico:</label>
                        <input type="email" class="form-control" id="inputPassword4" placeholder="">
                    </div>
                </div>

                <div style="text-align: right;">
                    <button type="submit" asp-controller="Home" asp-action="ViewInfoReceptor" class="btn btn-dark">Siguiente</button>
                </div>
            </form>
        </div>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>
